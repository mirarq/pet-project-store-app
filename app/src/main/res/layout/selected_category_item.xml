<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageViewIconInRV"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/ic_launcher_foreground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewTitleRV"
        android:layout_width="230dp"
        android:layout_height="100dp"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/alata"
        android:text="Title"
        android:textSize="17sp"
        app:layout_constraintStart_toEndOf="@+id/imageViewIconInRV"
        app:layout_constraintTop_toTopOf="@+id/imageViewIconInRV" />

    <TextView
        android:id="@+id/textViewRatingRV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="44dp"
        android:fontFamily="@font/alata"
        android:text="Rating"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/imageViewIconInRV"
        app:layout_constraintTop_toBottomOf="@+id/textViewTitleRV" />

    <TextView
        android:id="@+id/textViewRatingRateRV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/alata"
        android:text="4.60"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/textViewRatingRV"
        app:layout_constraintStart_toEndOf="@+id/textViewRatingRV"
        app:layout_constraintTop_toTopOf="@+id/textViewRatingRV"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageViewStar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-2dp"
        android:src="@drawable/star"
        app:layout_constraintBottom_toBottomOf="@+id/textViewRatingRateRV"
        app:layout_constraintStart_toEndOf="@+id/textViewRatingRateRV"
        app:layout_constraintTop_toTopOf="@+id/textViewRatingRateRV" />

    <TextView
        android:id="@+id/textViewPriceRV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:text="695.00$"
        app:layout_constraintBottom_toBottomOf="@+id/textView7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="3dp"
        android:text="Price:"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewStar"
        app:layout_constraintEnd_toStartOf="@+id/textViewPriceRV"
        app:layout_constraintTop_toTopOf="@+id/imageViewStar" />
</androidx.constraintlayout.widget.ConstraintLayout>